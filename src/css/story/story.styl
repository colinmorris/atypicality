/* CUSTOM STORY STYLE */

/* TODO: mobile scrolly styles
cf. song-repetition/src/css/story/scrolly-columns.styl
*/
#story
  position: relative
  width: 100%
  .sticky
    width 60%
    position absolute
    top 0
    left 0
    bottom auto
    margin-right 40%
    margin-left 2%
    transform translate3d(0, 0, 0)
    // TODO: apparently a bad idea on mobile?
    height 100vh
    & .radar
      position absolute
      top 50%
      transform translateY(-50%)

  .scrolltext
    position: relative
    width: 33%
    max-width: 30rem
    margin-right: 2.5%
  .is-fixed
    position: fixed
  .is-bottom
    top: auto
    bottom: 0

  // debug
  .step
    background-color: rgba(255, 66, 2, .04)
    &.active
      background-color: rgba(66, 255, 2, .1)

.graphic
  // gonna try to match .prose for now
  max-width: 40rem
  margin: 0 auto

.big-graphic
  width: 80%
  margin-left: 10%

.radar
  display: block
  margin: 0 auto

  & .axis
    & text.highlight
      color red
  & .marker.highlight
    fill-opacity .8

.songchart
  background-color: #673ab717
  .heading h3
    padding-top: .5rem
    padding-left: 1rem

#song-explorer
  margin-left: 10em
  margin-bottom: 10em

.meta_factoid
  margin-right: 1rem
  font-family: monospace
  font-size: .6rem
  display: inline-block


.spiderweb polygon
  fill-opacity: .2
  &:hover
    fill-opacity: .5
.spiderweb circle
  fill-opacity: .5

