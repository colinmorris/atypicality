#story
  // laid out normally then repositioned *relative to itself*
  position: relative
  width: 100%
  .sticky
    width 60%
    position absolute
    top 0
    left 0
    bottom auto
    margin-right 40%
    margin-left 2%
    transform translate3d(0, 0, 0)
    // TODO: apparently a bad idea on mobile?
    height 100vh
    & .radar
      // positioned relative to closest ancestor and 'removed from normal document flow' - no space is allocated for it
      position absolute
      top 50%
      transform translateY(-50%)

  .scrolltext
    position: relative
    width: 33%
    max-width: 30rem
    margin-right: 2.5%
  .is-fixed
    // positioned relative to viewport
    position: fixed
  .is-bottom
    top: auto
    bottom: 0

  .step
    $p = 160px
    padding-top ($p / 4)
    padding-bottom $p
    $m = 2px
    margin-top $m
    margin-bottom $m
    // debug
    background-color: rgba(255, 66, 2, .04)
    &.active
      background-color: rgba(66, 255, 2, .1)

