
.radar
  // Horizontally center
  display: block
  margin: 0 auto

  .axis
    text
      font-size 12
    text.highlight
      fill red
      font-weight bold
    line
      stroke-width .5
      stroke black

  .marker
    fill-opacity .01
    r 5
    &.highlight
      fill-opacity .8

.spiderweb
  // primary song
  fill cyan
  // another song temporarily contrasted with primary song
  &.contrast
    fill red
  // 'avg song' baseline blob
  &.baseline
    fill #999
    &.hidden
      fill #9990
  // temporarily drawing attention to a particular web
  &.highlight polygon
    fill-opacity .6
  polygon
    fill-opacity: .2
    &:hover
      fill-opacity: .5
  circle
    fill-opacity: .5

