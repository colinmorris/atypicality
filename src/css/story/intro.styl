.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem
	text-align center

	&__hed
		font-family copernicus,georgia,serif
		max-width 60rem
		margin 0 auto
		padding-top 5rem
		font-weight bold
		set-type-size('xx-large', true)
		+mq('bp-2')
			set-type-size('xxx-large', true)
		+mq('bp-3')
			set-type-size('xxxx-large', true)
			
	&__subhed
		font-family copernicus,georgia,serif
		font-weight bold
		set-type-size('x-large', true)
		+mq('bp-2')
			set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
	
	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 5rem
		padding-bottom 1.5rem
		set-type-size('small', true)
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		set-type-size('medium', true)