// Various hides
.hide-accessible
	hidden(accessible)
.hide-invisible
	hidden(invisible)
.hide-display
	hidden()
	
// Skip to main for accessibility
.skip-to-main
	border none
	hidden(accessible)
	&:focus 
		width auto
		height auto
		background-color $off-white
		padding 0.5em
		z-index 1

.prose
	max-width $column-width
	margin 0 auto
	padding 0 1rem
	&__hed
		font-weight bold

.graphic
	&__hed
		font-weight 500
	&__dek
		margin 0
		margin-bottom 1.5rem
	&__chart
		width 100%
	&__key
		display flex
		flex-wrap wrap
		margin-bottom 0.5rem
		justify-content flex-end
		li 
			padding 0
			margin-left 0.75em
			letter-spacing 0.05em
			text-transform uppercase
			font-weight bold
			line-height 1
			&:before
				content ''
				display inline-block
				width 0.8em
				height 0.8em
				background-color $off-black
				margin-right 0.25em